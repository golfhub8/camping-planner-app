{
  "buildCommand": "npm --prefix client ci && npm --prefix client run build",
  "outputDirectory": "dist/public",
  "cleanUrls": true,
  "rewrites": [
    { "source": "/api/stripe-webhook", "destination": "/api/stripe-webhook" },
    { "source": "/api/(.*)", "destination": "/api/server" },
    { "source": "/(.*)", "destination": "/dist/public/index.html" }
  ]
}
